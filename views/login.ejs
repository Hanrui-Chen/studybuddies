<% include ./partials/loginheader %>

<div class="card loginpageform">

<div class="card-body">
<form action="/login" method="POST">
  <p class="h4 text-center mb-4" style="color:orange;" >Login</p>

    <div class="form-group">
    <label for="username" class="grey-text">Your Email</label>
    <input type="email" id="username" class="form-control" name="username" placeholder="Email">
  </div>

    <div class="form-group">
    <label for="password" class="grey-text">Your Password</label>
    <input type="password" id="password" class="form-control" name="password" placeholder="password">
  </div>
  
    <div class="text-center mt-4">
    <input type="submit" class="btn btn-outline-orange" value="Login">
  </div>
</form>
</div>

</div>
